/**index.wxss**/
@import "../posts/download/download.wxss";

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.card {
  border: 2px solid #fff;
  border-radius: 5px;
  background-color: #fff;
  box-shadow: 2px 2px 2px 2px #ccc;
  margin: 8px;
  position: relative;
}

.welcome {
  text-align: center;
  display: flex;
  flex-direction: column;
  height: 100%;
  align-items: center;
}
